<body>
  <nav>
    <a href="/events" <%- title === 'UPCOMING EVENTS'? 'class="active"' : '' %>>
      <i class="fas fa-link"></i>
    </a>
    <a href="events/new" <%- title === 'SUBMIT EVENT'? 'class="active"' : '' %>>
      <i class="fas fa-plus"></i>
    </a>
    <a href="user/favorites" <%- title === 'MY FAVORITES'? 'class="active"' : '' %>>
      <i class="fas fa-heart"></i>
    </a>
    <a href="" <%- title === 'MY PROFILE'? 'class="active"' : '' %>>
      <i class="fas fa-user"></i>
    </a>
    <% if (user) { %>
      <a href="/logout">
        <i class="fas fa-sign-out-alt"></i>
      </a>
    <% } else { %>
      <a href="/auth/google" class="login">
        <i class="fas fa-sign-in-alt"></i>&nbsp;LOG IN
      </a>
    <% } %>
  </nav>
